<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">


    <!-- RecyclerView для отображения фото и видео -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="2"
        tools:listitem="@layout/media_item"
        android:layout_margin="@dimen/material_emphasis_medium"
        />


    <!-- Кнопки для выбора и отмены выбора фото и видео -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/button_select"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/cancel_foreground" />

        <ImageButton
            android:id="@+id/button_cancel"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/apply_foreground" />

    </LinearLayout>

</LinearLayout>
